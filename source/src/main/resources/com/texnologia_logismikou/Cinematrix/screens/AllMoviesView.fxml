<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane styleClass="scroll-pane-background" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.texnologia_logismikou.Cinematrix.AllMoviesViewController">
   <children>
      <VBox alignment="CENTER" spacing="20.0">
         <children>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Now Featuring" textFill="#dedede">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <HBox fx:id="now_featuring_modals" spacing="20.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <Label text="Upcomming" textFill="#dedede">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <HBox fx:id="upcomming_modals" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </VBox>
   </children>
</Pane>
